@model Proizvod

@{
    ViewBag.Title = "AÅ¾uriranje proizvoda";
}

<form method="post" asp-route-page="@ViewBag.Page" asp-route-sort="@ViewBag.Sort"
    asp-route-ascending="@ViewBag.Ascending">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Cijena"></label>
        <div><span asp-validation-for="Cijena" class="text-danger"></span></div>
        <input asp-for="Cijena" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Kolicina"></label>
        <div><span asp-validation-for="Kolicina" class="text-Kolicina"></span></div>
        <input asp-for="Kolicina" class="form-control">
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index" asp-route-page="@ViewBag.Page" asp-route-sort="@ViewBag.Sort"
            asp-route-ascending="@ViewBag.Ascending" class="btn btn-secondary">Odustani</a>
    </div>
</form>